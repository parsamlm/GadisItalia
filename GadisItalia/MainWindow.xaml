<Window x:Class="GadisItalia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GadisItalia"
        mc:Ignorable="d"
        Title="GadisOffice V.5.0" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="Elenco dei fornitori" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="auto" Width="auto" RenderTransformOrigin="2.991,1.271" Grid.Column="1" FontWeight="Bold" FontSize="16"/>
        <ListView Name="SupplierList" Grid.Column="1" Margin="10,50,10,10" SelectionChanged="SupplierList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding FornitoreID}"/>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding RagioneSociale}"/>
                    <GridViewColumn Header="Responsabile" DisplayMemberBinding="{Binding Responsabile}"/>
                    <GridViewColumn Header="Sitoweb" DisplayMemberBinding="{Binding Sitoweb}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

