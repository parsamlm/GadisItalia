<Window x:Class="GadisItalia.Fornitore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GadisItalia"
        mc:Ignorable="d"
        Title="Fornitore" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="SupplierDetailsLabel" Content="Dettagli del fornitore" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="auto" Width="auto" RenderTransformOrigin="2.991,1.271" FontWeight="Bold" FontSize="16" Grid.Row="0"/>

        <Label Content="Ultima modifica:" Width="auto" Height="auto" HorizontalAlignment="Left" Margin="465,4,0,0" VerticalAlignment="Top" FontSize="9" Grid.Row="0" FontWeight="Bold"/>
        <Label Content="Da:" Width="auto" Height="auto" HorizontalAlignment="Left" Margin="465,26,0,0" VerticalAlignment="Top" FontSize="9" Grid.Row="0" FontWeight="Bold"/>
        <Label Name="UltimaModificaLabel" Width="auto" Height="auto" Content="data" HorizontalAlignment="Left" Margin="545,4,0,0" VerticalAlignment="Top" FontSize="9" Grid.Row="0"/>
        <Label Name="DaLabel" Width="auto" Height="auto" Content="nome" HorizontalAlignment="Left" Margin="489,26,0,0" VerticalAlignment="Top" FontSize="9" Grid.Row="0" Grid.RowSpan="2"/>

        <TabControl Margin="10,10,10,10" Grid.Row="1">
            <TabItem Header="Anteprima">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="10,10,10,10" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Selezione Lingua" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold"/>
                        <ComboBox Width="150" Margin="5,0,0,0" HorizontalAlignment="Left" Grid.Column="1">
                            <ComboBoxItem Content="Italiano"/>
                            <ComboBoxItem Content="Inglese"/>
                            <ComboBoxItem Content="Francese"/>
                            <ComboBoxItem Content="Tedesco"/>
                        </ComboBox>
                        <Label Content="Esporta:" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Margin="5,0,0,0" FontWeight="Bold"/>
                        <Button Content="Word" Width="auto" Height="auto" Margin="5,0,0,0" Padding="5 0 5 0" HorizontalAlignment="Right" Grid.Column="3" FontSize="10"/>
                        <Button Content="PDF" Width="auto" Height="auto" Margin="5,0,0,0" Padding="5 0 5 0" HorizontalAlignment="Right" Grid.Column="4" FontSize="10"/>
                    </Grid>
                    <TextBlock Text="Anteprima Content" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>